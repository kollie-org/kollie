{% extends "base.jinja2" %}

{% block title %}
Create new Kollie environment
{% endblock title %}

{% block content %}

<div class="card mt-4">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <div class="p-2">
                <h5 class="card-title">Create new environment</h5>
            </div>
        </div>

    </div>
    <div class="card-body">
        <form role="form" method="post" action="{{ relative_url_for('handle_create_env') }}">
            <div class="mb-3">
                <label for="envName" class="form-label">Name</label>
                <input type="text" name="env_name" class="form-control" id="envName" aria-describedby="envNameHelp">
                <div id="envNameHelp" class="form-text">Give your new environment a name. This name will be used for
                    generating urls</div>
            </div>
            <div class="mb-3">
                <label for="fluxRepoBranch" class="form-label">(Optional) Branch of the flux repository</label>
                <input type="text" name="flux_repo_branch" class="form-control" id="fluxRepoBranch" aria-describedby="fluxRepoBranchHelp">
                <div id="fluxRepoBranchHelp" class="form-text">Select a branch of the flux repository
                    for apps to deploy with. Defaults to using staging branch.</div>
            </div>
            <button type="submit" class="float-end btn btn-primary">Create</button>
        </form>
    </div>
</div>
{% endblock content %}