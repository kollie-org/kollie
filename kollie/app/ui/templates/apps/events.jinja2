<div class="card mt-4">
    <div class="card-header">
        Events
    </div>
    <div class="card-body">
        <div class="mb-3">
            <table class="table">
                <tr>
                    <th>Status</th>
                    <th>Reason</th>
                    <th>Message</th>
                </tr>
                {% for event in app.events %}
                <tr>
                    <td>
                        <span class="badge bg-{{ 'success' if event.ready else 'danger' }}">
                            {{ 'success' if event.ready else 'error' }}
                        </span>
                    </td>
                    <td>{{ event.status_reason }}</td>
                    <td>{{ event.status_message }}</td>
                </tr>
                {% endfor %}
            </table>
        </div>
    </div>
</div>